$(function(){var day=true;var isConta=$('section.info-user-geral').size();if(!isConta){if(localStorage.getItem('day')=='false'){var circle=$('.toggle-dark-mode .circle-toggle');day=(localStorage.getItem('day')=='true')?true:false;circle.animate({'left':'40px'});circle.css({'background-color':'#5e4a7d'});applyNight();}
$('.toggle-dark-mode').click(function(){var circle=$(this).find('.circle-toggle');if(day){day=false;circle.animate({'left':'40px'});circle.css({'background-color':'#5e4a7d'});applyNight();}else{day=true;circle.animate({'left':'0'});circle.css({'background-color':'#a996c7'});applyDay();}
localStorage.setItem('day',day);})
function applyDay(){$('.header-mobile').css({'background-color':'#5e3ea1'});$('.nome-curso p').css({'color':'#646464'});$('header').css({'background-color':'#5e3ea1'});$('.header-membro').css({'background-color':'#4c3282'});$('section.info-aluno-campus').css({'background-color':'white'});$('.tr1 p, .tr1 a').css({'color':'#646464'});$('.th h2').css({'color':'#5e3ea1'});$('.th').css({'background-color':'#dcd4e5'});if($('section.info-aluno-campus').size()>0){$('footer').show();}
if($('.header-mobile').is(':hidden')){$('header').css({'background-color':'#5e3ea1'});}else{$('header').css({'background-color':'#4c3282'});}}
function applyNight(){$('footer').hide();$('.th h2').css({'color':'white'});$('.th').css({'background-color':'#2b2a2a'});$('.header-mobile').css({'background-color':'#212121'});$('.tr1 p, .tr1 a').css({'color':'white'});$('.nome-curso p').css({'color':'white'});$('.header-membro').css({'background-color':'rgb(30,30,30)'});$('header').css({'background-color':'rgb(26,26,26)'});$('section.info-aluno-campus').css({'background-color':'rgb(24,24,24)'});}}
$('.msg-discord').click(function(){alert("Este Ã© um recurso apenas para alunos matriculados em pelo menos um curso.");return false;})
if($('.progress-bar').length>0){var progress=window.sessionStorage.getItem('progress');var lastTime=window.sessionStorage.getItem('progressHour');if(progress==null){$.ajax({method:'post',dataType:'json',url:include_path+'ajax/extras.php'}).done(function(data){$('.progress-bar').each(function(i){$(this).find('div').css('width',data[i]+'%');$(this).find('div').find('span').html(data[i]+'%');})
var progressArr=JSON.stringify(data);window.sessionStorage.setItem("progress",progressArr);var dataAtual=new Date();window.sessionStorage.setItem("progressHour",dataAtual.getTime());})}else{var progressArr=JSON.parse(progress);var sizeCursos=$('.progress-bar').size();if(new Date().getTime()-lastTime>=120000||sizeCursos>progressArr.length){window.sessionStorage.removeItem('progress',null);$.ajax({method:'post',dataType:'json',url:include_path+'ajax/extras.php'}).done(function(data){$('.progress-bar').each(function(i){$(this).find('div').css('width',data[i]+'%');$(this).find('div').find('span').html(data[i]+'%');})
var progressArr=JSON.stringify(data);window.sessionStorage.setItem("progress",progressArr);var dataAtual=new Date();window.sessionStorage.setItem("progressHour",dataAtual.getTime());})}else{$('.progress-bar').each(function(i){if(progressArr[i]!=null){$(this).find('div').css('width',progressArr[i]+'%');$(this).find('div').find('span').html(progressArr[i]+'%');}})}}}
if(typeof $.fn.mask!=='undefined'){$('input[name=cpf]').mask('999.999.999-99');}
if(typeof $.fn.mCustomScrollbar!=='undefined'){$('.box-notificacao-duvidas').mCustomScrollbar({theme:"dark",mouseWheelPixels:200});}
$('.close-modal-campus').click(function(){$('.modal').remove();})
$('.notifications').click(function(){if($('.box-notificacao-duvidas').is(':visible')==false){$('.box-notificacao-duvidas').fadeIn();$('.arrow-indicator-box-duvidas').fadeIn();}else{$('.box-notificacao-duvidas').fadeOut();$('.arrow-indicator-box-duvidas').fadeOut();}})
$('.nav-campus a').click(function(e){if($(this).attr('class')!='discord-btn'){var target=$(this).attr('target');if(target!=null){e.preventDefault();$('html,body').animate({'scrollTop':$('#'+target).offset().top});}}})})